# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ===== DATABASE =====
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ===== PAYMENTS =====
# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Toss Pay (Korean Market)
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_your_toss_client_key
TOSS_SECRET_KEY=test_sk_your_toss_secret_key

# ===== FILE STORAGE =====
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=idea-files

# ===== ANALYTICS & MONITORING =====
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ===== EMAIL =====
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@ideavault.com
EMAIL_API_KEY=re_your_resend_api_key
EMAIL_API_URL=https://api.resend.com/emails

# ===== APP CONFIGURATION =====
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=IdeaVault
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# ===== DEVELOPMENT =====
NODE_ENV=development
LOG_LEVEL=debug

# ===== SECURITY =====
ENCRYPTION_KEY=your_32_character_encryption_key
JWT_SECRET=your_jwt_secret_key

# ===== THIRD PARTY SERVICES =====
# OpenAI for content moderation (future)
OPENAI_API_KEY=sk-your_openai_api_key

# Algolia for search (future)
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_ADMIN_API_KEY=your_algolia_admin_key
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your_algolia_search_key

# AWS S3 for file backup (future)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=ideavault-backups
